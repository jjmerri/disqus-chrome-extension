{
  "manifest_version": 3,
  "name": "Disqus (Unofficial)",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "description": "This is an UNOFFICIAL Disqus extension that allows you to use Disqus on any site by clicking the extension icon to open a popup.",
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://developer.chrome.com/*"],
  "permissions": ["tabs"],
  "background": {
    "service_worker": "./scripts/hot-reload.js"
  }
}
